.container-fluid.create-content-group-form
	.row
		.modal-header
			h2 Create some content
		.modal-body
			form
				.col-xs-12
					.form-group
						input.form-control(ng-model="createContentGroupData.name", name='name', type='text', placeholder='Name')
				.col-xs-12
					.form-group
						input.form-control(ng-model="createContentGroupData.slug", name='slug', type='text', placeholder='slug')
				.col-xs-12
					button.btn.btn-default.pull-right(ng-click='createContentGroup(createContentGroupData)') Create Content Group
					button.btn.btn-default.pull-right(ng-click='cancel()') Cancel
