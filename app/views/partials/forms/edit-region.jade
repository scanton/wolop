.container-fluid.edit-region-form
	.row
		.modal-header
			h2 Edit Region - {{regionData.name}}
		.modal-body
			form
				.col-xs-12
					.form-group
						input.form-control(ng-model="regionData.name", name='name', type='text', placeholder='Name')
				.col-xs-12
					.form-group
						input.form-control(ng-model="regionData.slug", name='slug', type='text', placeholder='slug')
				.col-xs-12
					.form-group
						input.form-control(ng-model="regionData.icon", name='icon', type='text', placeholder='icon')
						
				.col-xs-12
					button.btn.btn-default.pull-right(ng-click='updateRegion(regionData)') Update Region
					button.btn.btn-default.pull-right(ng-click='cancel()') Cancel
