template(name='breadcrumbs')
	ol.breadcrumb
		li
			a(href='/home') Home
		if websiteContext
			li
				a(href='/website-details/{{ websiteContext.slug }}')= websiteContext.name
		if contentGroupContext and websiteContext
			li
				a(href='/content-group-details/{{ contentGroupContext.slug }}')= contentGroupContext.name
				//a.label(class='label-{{ getRiskLabel contentGroupContext.riskLevel }}', href='/content-group-details/{{ contentGroupContext.slug }}')= contentGroupContext.name
		if regionContext and contentGroupContext and websiteContext
			li
				a(href='/region-details/{{ regionContext.slug }}')= regionContext.name
		if languageContext and regionContext and contentGroupContext and websiteContext
			li
				a(href='/language-details/{{ languageContext.slug }}')= languageContext.name


