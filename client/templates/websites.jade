template(name='websites')
	.container-fluid
		.row
			.col-xs-12
				button.btn.btn-primary.pull-right.add-item-button Add Website
				h1 Websites
				.modal.fade.add-item-modal
					.modal-dialog
						.modal-content
							form.add-item-form
								.modal-header
									h4.modal-title Add Website
								.modal-body
									.col-xs-6
										input(name='name', placeholder='name')
									.col-xs-6
										input(name='slug', placeholder='slug')
									.col-xs-12
										input(name='url', placeholder='url')
									.clearfix
								.modal-footer
									input(type='hidden', name='isActive', value='on')
									button.btn.btn-warning Cancel
									button.btn.btn-success(type='submit') Add Website
			.col-xs-12
				ul.websites
					each websites
						li.website(data-slug='{{ slug }}')
							h4.name {{ name }}
								small -
									a(href='http://{{ url }}').url= url
							.supported-content-groups.well
								.dropdown.pull-right
									button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown') add content group
										span.glyphicon.glyphicon-triangle-bottom
									ul.dropdown-menu(role='menu')
										each contentGroups
											li(role='presentation')
												a.add-content-group-to-website(href='#', data-slug='{{ slug }}' role='menuitem', tabindex='-1') {{ name }}
								if canReactivate slug
									button.btn.btn-warning.reactivate-button.pull-right(data-slug='{{ slug }}') Reactivate
								if supportedContentGroups
									h4 content groups:
									ul
										each supportedContentGroups
											li
												a.delete-button.remove-content-group-from-website(href='#', data-slug='{{.}}') 
													span.glyphicon.glyphicon-remove
												span.slug {{.}}
								else
									h4 (no content groups in this website)