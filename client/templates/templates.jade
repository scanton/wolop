template(name='regions')
	.container-fluid
		.row
			.col-xs-12
				button.btn.btn-primary.pull-right.add-item-button Add Region
				h1 Regions
				.modal.fade.add-item-modal
					.modal-dialog
						.modal-content
							form.add-item-form
								.modal-header
									h4.modal-title Add Region
								.modal-body
									.col-xs-6
										input(name='name', placeholder='name')
									.col-xs-6
										input(name='slug', placeholder='slug')
									.clearfix
								.modal-footer
									button.btn.btn-warning Cancel
									button.btn.btn-success(type='submit') Add Region
			.col-xs-12
				ul.regions
					each regions
						li
							.dropdown.pull-right
								button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown') add language
									span.glyphicon.glyphicon-triangle-bottom
								ul.dropdown-menu(role='menu', data-region-slug='{{ slug }}')
									each languages
										li(role='presentation')
											a.add-language-to-region(href='#', data-language-slug='{{ slug }}' role='menuitem', tabindex='-1') {{ name }}
							span.slug= slug
							| - {{ name }}
							.supported-languages
								if supportedLanguages
									small supported languages:
									ul
										each supportedLanguages
											li
												span.slug= slug
												| - {{ name }}
								else
									small (no languages in this region)

