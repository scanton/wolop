template(name='layout')
	.container-fluid
		header
			.login-options.pull-right
				if currentUser
					a(href='/logout') Logout
			h1 
				a(href='/') Wolop
	if currentUser
		.main-nav.pull-left
			ul
				each navData
					li
						a(href="/{{ link }}") 
							.glyphicon(class="glyphicon-{{ icon }}")
							| {{ name }}
	.container-fluid.main-container
		.row
			main
				+yield

