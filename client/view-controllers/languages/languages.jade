template(name='languages')
	.container-fluid
		.row
			.col-xs-12
				button.btn.btn-primary.pull-right.add-item-button Add Language
				h1 Languages
				.modal.fade.add-item-modal
					.modal-dialog
						.modal-content
							form.add-item-form
								.modal-header
									h4.modal-title Add Language
								.modal-body
									.col-xs-6
										input(name='name', placeholder='name')
									.col-xs-6
										input(name='slug', placeholder='slug')
									.clearfix
								.modal-footer
									input(type='hidden', name='isActive', value='on')
									button.btn.btn-warning Cancel
									button.btn.btn-success(type='submit') Add Language
			.col-xs-12
				ul.languages
					each languages
						li
							h4 {{name}} - 
								span.slug= slug