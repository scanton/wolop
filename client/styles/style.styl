*
	transition all 0.3s ease
body
	font-family 'Helvetica', 'Arial', sans

h1, h2, h3, h4, h5
	font-weight 300
	letter-spacing -.05em
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	
.center
	text-align center
	
.main-nav
	width 250px
	height 100%
	padding .5em
	ul
		list-style none
		padding 0 0 .5ex 0
		font-size 14pt
		li
			padding .25ex .5em
			font-weight 200
			a
				.glyphicon
					transition all 0.6s ease
					margin-right -6px
					font-size 10pt
					border 3px solid white
					border-color rgba(255, 255, 255, 0)
					padding 4px
					border-radius 50%
			a:hover
				text-decoration none
				.glyphicon
					margin-right 0
					border 3px solid #337ab7
	ul.admin-history
		font-size 11pt
		li
			border 1px solid #EEE
			border-radius 5px
			margin .25em 0
		.name
			font-weight bold
		.options
			font-size 10pt
			color purple
		.query
			font-size 8pt
		.data
			font-size 6pt
		.created 
			font-size 8pt
		
.main-container
	height 100%
	margin-left 250px

.login-form, .modal-body
	font-size 14pt
	label
		font-weight 300
		letter-spacing -.01em
	input
		width 100%
		border 1px solid #EEE
		border-radius 5px
		padding .5em
		margin .25em

ul.languages, ul.regions, ul.websites, ul.pages, ul.menus
	list-style none
	padding 0
	li
		border 1px solid #EEE
		border-radius 5px
		padding .5em
		margin .25em
		min-height 50px
		ul.dropdown-menu
			li
				border 0
				border-radius 0
				padding 0
				margin 0
				min-height 0
	.slug
		font-family monospace
		font-size 14pt

.supported-languages
	ul
		list-style none
		padding 0
		li
			display inline
			border-radius 5px
			box-shadow 0 1px 3px rgba(34,25,25,0.4)
			background -moz-linear-gradient(top,#FFFFFF, #F0EDED)
			background -o-linear-gradient(#FFFFFF, #F0EDED)
			background -webkit-linear-gradient(#FFFFFF, #F0EDED)